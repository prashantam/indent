<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :itemname %><br />
    <%= f.text_field :itemname %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %><br />
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description ,:rows => 2,:cols => 35,:maxlength => 160 %>
  </div>
  <div class="selectfield">
    <%= f.label :category_id %><br />
    <%= f.select("category_id", @categories.map {|c| [c.name,c.id]}, :selected =>@item.category_id )%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
