<h1>Listing quotations</h1>

<table>
  <tr>
    <th>Item</th>
    <th>&nbsp;</th>
    <th>Supplier</th>
    <th>&nbsp;</th>
    <th>Rate</th>
    <th>&nbsp;</th>
    <th>Date</th>
    <th>&nbsp;</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotations.each do |quotation| %>
  <tr>
    <% @qitem = Item.find(quotation.item_id) %>
    <td><%= @qitem.itemname %></td><td>&nbsp;</td>
    <% @qsup = Supplier.find(quotation.supplier_id) %>
    <td><%= @qsup.name %></td><td>&nbsp;</td>
    <td><%= quotation.rate %></td><td>&nbsp;</td>
    <td><%= quotation.date %></td><td>&nbsp;</td>
    <td><%= link_to 'Show', quotation %></td>
    <td><%= link_to 'Edit', edit_quotation_path(quotation) %></td>
    <td><%= link_to 'Destroy', quotation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

